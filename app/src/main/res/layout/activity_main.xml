<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/testbutton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textOff="快速设置"
            android:textOn="快速设置"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <ImageButton
            android:id="@+id/logoutSystem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/videoreturnmainxml" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/connect_light_flag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:background="@drawable/light_off" />
            <TextView
                android:id="@+id/connect_text_flag"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/connect_light_flag"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="未连接设备"
                android:textStyle="bold"
                android:textColor="@color/black_alpha"
                android:textSize="20sp"
                android:gravity="center"
                />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="1">

            <ImageButton
                android:id="@+id/main_wifi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/setwifixml" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/main_setting"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/setdefaultxml"
                android:contentDescription="TODO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/main_language"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/languagexml" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/main_camera"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/cameaxmltoggle" />
        </LinearLayout>
        <!--      <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="right"
                  android:layout_weight="0.5">

                  <ImageButton
                      android:id="@+id/logoutSystem"
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      android:layout_marginBottom="3dp"
                      android:layout_gravity="right"
                      android:background="@drawable/videoreturnmainxml"
                      />
              </LinearLayout>-->
    </LinearLayout>
    <!--   -->

    <LinearLayout
        android:id="@+id/common_constact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ll_top_bg">

        <Button
            android:id="@+id/main_leftButton"
            style="@style/top_group"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/main_leftbutton" />

        <Button
            android:id="@+id/main_rightButton"
            style="@style/top_all"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/main_rightbutton" />
    </LinearLayout>

</LinearLayout>


